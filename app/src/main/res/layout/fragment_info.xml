<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <!-- ScrollView para hacer el contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenidos a El Tronco"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="#3E2723"
                android:layout_gravity="center"
                android:paddingBottom="16dp"/>

            <!-- Imagen -->
            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant_image"
                android:layout_marginBottom="16dp"/>

            <!-- Sección de Quienes Somos -->
            <TextView
                android:id="@+id/who_we_are_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Quiénes somos?"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#3E2723"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/who_we_are_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Somos un restaurante comprometido con brindar la mejor experiencia culinaria a nuestros clientes. Utilizamos ingredientes frescos y de alta calidad para crear platos deliciosos y memorables. Nuestro equipo de chefs y personal de servicio se esfuerzan por ofrecer un ambiente acogedor y hospitalario."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="18sp"
                android:textColor="#3E2723"
                android:paddingBottom="16dp"/>

            <!-- Sección adicional: Nuestro Menú -->
            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestro Menú"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#3E2723"
                android:paddingBottom="8dp"/>

            <!-- Grid de Platos del Menú -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:orientation="horizontal">

                <!-- Plato 1 -->
                <ImageView
                    android:id="@+id/plato1_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato1"
                    android:layout_margin="8dp"/>

                <!-- Plato 2 -->
                <ImageView
                    android:id="@+id/plato2_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato2"
                    android:layout_margin="8dp"/>

                <!-- Plato 3 -->
                <ImageView
                    android:id="@+id/plato3_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato3"
                    android:layout_margin="8dp"/>

                <!-- Plato 4 -->
                <ImageView
                    android:id="@+id/plato4_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato4"
                    android:layout_margin="8dp"/>

                <!-- Plato 5 -->
                <ImageView
                    android:id="@+id/plato5_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato5"
                    android:layout_margin="8dp"/>

                <!-- Plato 6 -->
                <ImageView
                    android:id="@+id/plato6_image"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plato6"
                    android:layout_margin="8dp"/>

            </GridLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
